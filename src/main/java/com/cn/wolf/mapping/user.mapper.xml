<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cn.wolf.mapping.User">
        <resultMap type="User" id="userMap">
                <id property="id" column="id" />
                <result property="userName" column="user_name" />
                <result property="age" column="age" />
                <result property="note" column="usernote" />
                <result property="userId" column="user_id" />
        </resultMap>
        <sql id="userAttr">
                #{id},#{userId},#{userName},#{age},#{note}
        </sql>
        <sql id="dbAttr">
                id,user_id,user_name,age,usernote
        </sql>

        <insert id="saveUser" parameterType="User">
                insert into t_test_user (<include refid="dbAttr"></include>)
                values (<include refid="userAttr"></include>)
        </insert>

        <select id="getUserById" parameterType="String" resultMap="userMap">
                select * from t_test_user where id = #{id}
        </select>
</mapper>